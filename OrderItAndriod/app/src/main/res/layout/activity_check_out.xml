<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jai.orderit.CheckOutActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/login_back"
        android:alpha="0.2"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/appbar1"
            android:textColor="#000"
            android:layout_margin="10dp"
            android:text="Please give Rattings"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_in_rate"
            android:layout_below="@+id/appbar1"
            android:layout_above="@+id/texttq"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:id="@+id/texttq"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">
        <TextView
            android:textColor="#000"
            android:layout_margin="10dp"
            android:text="Thank you Vist Again"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:background="@color/colorPrimary"
            android:id="@+id/but_check_out"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Checkout Now"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
