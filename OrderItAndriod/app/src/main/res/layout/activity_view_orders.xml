<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.jai.orderit.ViewOrdersActivity">
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/login_back"
        android:alpha="0.1"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_order_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/back_order"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_width="40dp"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        android:layout_height="35dp" />
                    <TextView
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:text="Your Complete Order"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:id="@+id/myheader"
            android:layout_below="@+id/my_order_toolbar"
            android:layout_width="match_parent"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tab_name"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="tab"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/cust_name"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:text="tab"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/cust_id"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:text="tab"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:background="#a6a3a3"
                android:layout_height="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="100dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="Name"
                    android:layout_weight="3.5"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="25dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Price"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="35dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Quantity"
                    android:layout_weight="2.5"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="35dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Amount"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/view_in_order"
            android:layout_below="@+id/myheader"
            android:layout_above="@+id/ll_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/ll_amount"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#000"
                android:text="Total Amount"
                android:layout_weight="0.8"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_all_amount"
                android:textColor="#000"
                android:text="Rs 0.0"
                android:layout_weight="0.2"
                android:textSize="20dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
