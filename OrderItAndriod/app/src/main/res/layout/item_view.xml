<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="2dp"
    android:layout_margin="4dp"
    android:layout_width="match_parent"
    android:elevation="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/total_item_view"
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_pic"
        android:layout_width="100dp"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_margin="4dp"
            android:text="Dosa"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_type"
            android:layout_width="30dp"
            android:layout_margin="2dp"
            android:src="@drawable/veg"
            android:layout_height="30dp" />
        <TextView
            android:id="@+id/item_price"
            android:layout_width="200dp"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:text="Rs. 25/-"
            android:layout_height="30dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:id="@+id/item_ratting"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="4.5"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RatingBar
                android:id="@+id/item_ratting_bar"
                android:padding="2dp"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:numStars="5"
                android:stepSize="0.1"
                android:progressTint="#fdba1c"
                android:secondaryProgressTint="#fdba1c"
                android:rating="3"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="center"
              android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ic_person_black_24dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/item_ratting_views"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="45000000"
                android:singleLine="true"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/add_item"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="35dp"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:layout_height="35dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>