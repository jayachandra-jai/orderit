<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    android:elevation="20dp"
    android:orientation="horizontal"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/cart_item_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:text="Dosa"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/remove_item"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_margin="4dp"
                android:src="@drawable/ic_clear_black_24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:text="Rs. 25/-"
            android:textColor="#000"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">
            <TextView
                android:id="@+id/text_total"
               android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Quantity"
                android:textColor="#000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                app:snp_buttonBackgroundTintSelector="@color/white"
                app:snp_buttonIconLeft="@drawable/ic_remove_circle_outline_black_24dp"
                app:snp_buttonIconRight="@drawable/ic_add_circle_outline_black_24dp"
                app:snp_buttonTouchScaleFactor="0.8"
                app:snp_orientation="horizontal"
                app:snp_valueMarginEnd="5dp"
                app:snp_valueMarginStart="5dp"
                app:snp_value_text_color="@color/white"
                app:snp_value_text_size="18sp"
                app:snp_buttonPaddingBottom="8dp"
                app:snp_buttonPaddingLeft="8dp"
                app:snp_buttonPaddingRight="8dp"
                app:snp_buttonPaddingTop="8dp"
                android:background="@drawable/round_back"
                app:snp_value_text_appearance="?android:attr/textAppearanceMedium"
                android:layout_centerInParent="true"
                android:id="@+id/item_count"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/item_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="4.5"
                android:textColor="#000"
                android:textSize="20sp"

                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>