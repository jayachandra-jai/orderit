<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_gravity="center_horizontal"
        android:text="Contact Us"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/ran"
            android:scaleType="fitXY"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="A.M. Rangaraj., MCA., M.tech"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Assoc. Prof, Department of MCA"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/call_ranga"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:textSize="18dp"
                android:text="+91-9177588513"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/jai"
            android:layout_height="120dp" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="K. Jayachandra., MCA"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Android Developer"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/call_jai"
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="18dp"
                    android:text="+91-9000204595"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                    android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>